@page
@model RegisterModel
@{
    ViewData["Title"] = "Regisztráció";
    ViewData["Language"] = "hu-HU";
}

<!DOCTYPE html>
<html lang="@ViewData["Language"]" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alkalmazásom</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/reglogin.css" />
</head>
<body class="d-flex flex-column h-100 bg-dark text-white">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card bg-dark text-white">
                    <div class="card-header">
                        <h1 class="card-title">@ViewData["Title"]</h1>
                    </div>
                    <div class="card-body">
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control bg-dark text-white" autocomplete="username" aria-required="true" placeholder="név@példa.com" />
                                <label asp-for="Input.Email" class="form-label text-white">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control bg-dark text-white" autocomplete="new-password" aria-required="true" placeholder="Jelszó" />
                                <label asp-for="Input.Password" class="form-label text-white">Jelszó</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.ConfirmPassword" class="form-control bg-dark text-white" autocomplete="new-password" aria-required="true" placeholder="Jelszó megerősítése" />
                                <label asp-for="Input.ConfirmPassword" class="form-label text-white">Jelszó megerősítése</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Username" class="form-control bg-dark text-white" placeholder="Felhasználónév" />
                                <label asp-for="Input.Username" class="form-label text-white">Felhasználónév</label>
                                <span asp-validation-for="Input.Username" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.FirstName" class="form-control bg-dark text-white" placeholder="Keresztnév" />
								<label asp-for="Input.FirstName" class="form-label text-white">Keresztnév</label>
								<span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
								<input asp-for="Input.LastName" class="form-control bg-dark text-white" placeholder="Vezetéknév" />
                                <label asp-for="Input.LastName" class="form-label text-white">Vezetéknév</label>
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.ContactPhoneNumber" class="form-control bg-dark text-white" placeholder="Telefonszám" />
								<label asp-for="Input.ContactPhoneNumber" class="form-label text-white">Telefonszám</label>
								<span asp-validation-for="Input.ContactPhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <select asp-for="SelectedRole" class="form-select bg-dark text-white">
                                    <option value="Student">Diák</option>
                                    <option value="Teacher">Tanár</option>
                                    <option value="Admin">Adminisztrátor</option>
                                </select>
                                <label asp-for="SelectedRole" class="form-label text-white">Felhasználó típusa - Demonstrációs célok miatt, teszt</label>
                            </div>


                            <div class="d-grid gap-2 mb-3">
                                <button id="registerSubmit" type="submit" class="btn btn-primary">Regisztráció</button>
                            </div>
                            <div class="text-center">
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-white">Van már fiókja? Belépés</a>
                            </div>
                            <div class="text-center">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-white">Megerősítő e-mail újraküldése</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>