@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Elfelejtett jelszó";
    ViewData["Language"] = "hu-HU";
}

<!DOCTYPE html>
<html lang="@ViewData["Language"]" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alkalmazásom</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <style>
        html {
            font-size: 14px;
        }

        html {
            position: relative;
            min-height: 100%;
        }

        body {
            margin-bottom: 60px;
            background-color: #1e1e1e;
            color: #f1f1f1;
        }

        a {
            color: #0077b6;
        }

        a:hover {
            color: #005c8a;
        }

        .btn-primary {
            background-color: #0077b6;
            border-color: #0077b6;
        }

        .btn-primary:hover {
            background-color: #005c8a;
            border-color: #005c8a;
        }

        .form-control {
            background-color: #2d2d2d;
            border-color: #3c3c3c;
            color: #f1f1f1;
        }

        .form-control:focus {
            background-color: #3c3c3c;
            border-color: #4c4c4c;
            color: #f1f1f1;
            box-shadow: 0 0 0 0.25rem rgba(0, 119, 182, 0.25);
        }
    </style>
</head>
<body class="d-flex flex-column h-100 bg-dark text-white">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card bg-dark text-white">
                    <div class="card-header">
                        <h1 class="card-title">@ViewData["Title"]</h1>
                    </div>
                    <div class="card-body">
                        <h2>Add meg a felhasználóneved</h2>
                        <hr />
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Username" class="form-control bg-dark text-white" autocomplete="username" aria-required="true" placeholder="" />
                                <label asp-for="Input.Username" class="form-label text-white">Felhasználónév</label>
                                <span asp-validation-for="Input.Username" class="text-danger"></span>
                            </div>
                            <div class="d-grid gap-2 mb-3">
                                <button type="submit" class="btn btn-primary">Jelszó visszaállítása</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>