@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Regisztráció megerősítése";
    ViewData["Language"] = "hu-HU";
}

<!DOCTYPE html>
<html lang="@ViewData["Language"]" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alkalmazásom</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <style>
        html {
            font-size: 14px;
        }


        html {
            position: relative;
            min-height: 100%;
        }

        body {
            margin-bottom: 60px;
            background-color: #1e1e1e;
            color: #f1f1f1;
        }

        a {
            color: #0077b6;
        }

        a:hover {
            color: #005c8a;
        }

        .btn-primary {
            background-color: #0077b6;
            border-color: #0077b6;
        }

        .btn-primary:hover {
            background-color: #005c8a;
            border-color: #005c8a;
        }
    </style>
</head>
<body class="d-flex flex-column h-100 bg-dark text-white">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card bg-dark text-white">
                    <div class="card-header">
                        <h1 class="card-title">@ViewData["Title"]</h1>
                    </div>
                    <div class="card-body">
                        @{
                            if (@Model.DisplayConfirmAccountLink)
                            {
                                <p>
                                    Ezen az alkalmazáson jelenleg nincs valós e-mail küldő beállítva, olvassa el <a href="https://aka.ms/aspaccountconf">ezt a dokumentációt</a> a valós e-mail küldő beállításához.
                                    Normál esetben ezt e-mailben kapná meg: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Kattintson ide a fiók megerősítéséhez</a>
                                </p>
                            }
                            else
                            {
                                <p>
                                    Kérjük, ellenőrizze e-mail fiókját a regisztráció megerősítéséhez.
                                </p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>