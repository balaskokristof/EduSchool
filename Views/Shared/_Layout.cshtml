<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduSchool</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EduSchool.styles.css" asp-append-version="true" />
    <style>
        .navbar {
            background-color: #2d2d2d !important;
            border-color: #3c3c3c !important;
        }

        .navbar-brand,
        .nav-link {
            color: #f1f1f1 !important;
        }

        .navbar-toggler {
            border-color: #3c3c3c !important;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3e%3cpath stroke='rgba(241, 241, 241, 0.5)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e") !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a href="@Url.Action("Index", "Home", new { area = "" })">
                    <img src="~/pic/eduschool.png" alt="logo" style="max-width: 110px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="nav-item">
                    <!-- Üres placeholder -->
                    </ul>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @using Microsoft.AspNetCore.Identity
                    @inject SignInManager<ApplicationUser> SignInManager

                    <ul class="navbar-nav flex-grow-1">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            if(User.IsInRole("Student"))
							{
                                <li class="nav-item">
									<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Kurzusok</a>
                                    </li>
								<li class="nav-item">
									<a class="nav-link text-white" asp-area="" asp-controller="Course" asp-action="CourseEnroll">Kurzus felvétele</a>
								</li>
							}
                            if (User.IsInRole("Teacher"))
							{
                                <li class="nav-item">
									<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Kurzusok</a>
                                    </li>
								<li class="nav-item">
									<a class="nav-link text-white" asp-area="" asp-controller="Course" asp-action="Index">Új kurzus létrehozása</a>
								</li>
							}

                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
            @await Html.PartialAsync("~/Views/Shared/_SuccessMessage.cshtml")
            @await Html.PartialAsync("~/Views/Shared/_ErrorMessage.cshtml")
            @await Html.PartialAsync("~/Views/Shared/_WarningMessage.cshtml")
        </div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>