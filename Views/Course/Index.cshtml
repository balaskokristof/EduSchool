@model EduSchool.ViewModels.CourseViewModel

@{
    ViewData["Title"] = "Új kurzus hozzáadása";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: #1e1e1e;
        color: #f1f1f1;
        font-size: 16px;
    }

    h4 {
        text-align: center;
        color: #f1f1f1;
        margin-bottom: 20px;
    }

    .form-container {
        margin: 0 auto;
        max-width: 500px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        color: #f1f1f1;
    }

    input[type="text"],
    input[type="date"] {
        background-color: #2d2d2d;
        border: 1px solid #3c3c3c;
        color: #f1f1f1;
        padding: 10px;
        width: 100%;
    }

    input[type="submit"] {
        background-color: #0077b6;
        border: none;
        color: #f1f1f1;
        padding: 10px 20px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #005c8a;
        }

    a {
        color: #f1f1f1;
        text-decoration: none;
    }

        a:hover {
            color: #b4b4b4;
        }

    .text-danger {
        color: #ff4646;
    }

</style>


<h4>Új kurzus létrehozása</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Kurzus neve:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Kurzus leírás:</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Kezdési dátum:</label>
                <input type="date" asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">Befejezési dátum:</label>
                <input type="date" asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label">Kategória:</label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstructorID" class="control-label">Oktató neve:</label>
                <input asp-for="InstructorID" class="form-control" readonly value="@ViewBag.InstructorName" />
                <span asp-validation-for="InstructorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Létrehozás" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza a listához</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
