@model EduSchool.ViewModels.StudentAbsenceViewModel

@{
    ViewData["Title"] = "Hiányzások";
}

<head>
    <link rel="stylesheet" href="~/css/views/studentabs.css">
</head>

<div class="container">
    <h2>Saját hiányzásaim - @Model.CourseName</h2>

    @if (Model.Absences.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Kezdő dátum</th>
                    <th>Vég dátum</th>
                    <th>Típus</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var absence in Model.Absences)
                {
                    <tr>
                        <td>@absence.StartDate.ToShortDateString()</td>
                        <td>@absence.EndDate.ToShortDateString()</td>
                        <td>@absence.AbsenceType.TypeName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nincs rögzített hiányzásod ebben a kurzusban.</p>
    }
</div>