@model EduSchool.ViewModels.RecordAbsenceViewModel

<head>
	<link rel="stylesheet" href="~/css/views/recordabsence.css">
    <style>
        body {
            background-color: #1e1e1e;
            color: #f1f1f1;
        }

        .container {
            margin-top: 30px;
        }

        h2 {
            color: #f1f1f1;
            margin-bottom: 20px;
            font-size: 2rem;
            font-weight: bold;
            text-align: center;
        }

        .form-group label {
            color: #f1f1f1;
            font-size: 1.1rem;
        }

        .form-control {
            background-color: #2d2d2d;
            color: #f1f1f1;
            border: 1px solid #3c3c3c;
        }

            .form-control:focus {
                background-color: #3c3c3c;
                color: #f1f1f1;
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0069d9;
                border-color: #0062cc;
            }

        .text-danger {
            color: #dc3545;
        }
        </style>
    </head>

<div class="container">
    <h2>Mulasztás rögzítése</h2>
    <form asp-action="RecordAbsence" method="post">
        <input type="hidden" name="CourseID" value="@Model.CourseID" />
        <div class="form-group">
            <label asp-for="StudentID" class="control-label">Tanuló:</label>
            <select asp-for="StudentID" class="form-control">
                <option value="">Válasszon tanulót</option>
                @if (Model.Students != null)
                {
                    foreach (var student in Model.Students)
                    {
                        <option value="@student.UserID">@($"{student.LastName} {student.FirstName}")</option>
                    }
                }
            </select>
            <span asp-validation-for="StudentID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartDate" class="control-label">Mulasztás kezdő dátuma:</label>
            <input asp-for="StartDate" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndDate" class="control-label">Mulasztás befejező dátuma:</label>
            <input asp-for="EndDate" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AbsenceTypeID" class="control-label">Mulasztás típusa:</label>
            <select asp-for="AbsenceTypeID" class="form-control">
                <option value="">Válasszon mulasztás típust</option>
                @foreach (var type in Model.AbsenceTypes)
                {
                    <option value="@type.AbsenceTypeID">@type.TypeName</option>
                }
            </select>
            <span asp-validation-for="AbsenceTypeID" class="text-danger"></span>
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Rögzítés</button>
        </div>
    </form>

    <br />

    <a href="#" onclick="history.back(); return false;" class="btn btn-primary">Vissza</a>
</div>



